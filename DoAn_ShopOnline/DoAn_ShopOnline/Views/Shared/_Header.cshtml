@model IEnumerable<ShopOnlineConnection.GioHang>
<header class="container">
    <div class="row">
        <div class="col-md-4">
            <div id="logo"><img src="~/Asset/images/logo.png" /></div>
        </div>
        <div class="col-md-4">
            <form class="form-search" action="~/TimKiem/KetQuaTimKiem">
                <input type="text" class="input-medium search-query" name="timkiem" placeholder="Nhập tên sản phẩm">
                <button type="submit" class="btn"><span class="glyphicon glyphicon-search"></span></button>
            </form>
        </div>
        <div class="col-md-4">
            <div id="cart"><a class="btn btn-1" href="@Url.Action("index", "GioHang")"><span class="glyphicon glyphicon-shopping-cart"></span>CART : @Model.Count() ITEM</a></div>
        </div>
    </div>
</header>
